#! /usr/bin/python3
#
# This script starts an HTTP server for Pub-Tools and then create a browser
# widget which connects to it.
#

import sys
import webview
from threading import Thread
from werkzeug.serving import make_server
import logging

from app import app

logging.basicConfig(
	level=logging.DEBUG,
	format='%(asctime)s %(levelname)s %(name)s %(message)s',
	datefmt='%H:%M:%S'
	)

print("Starting embedded web server...")
server = make_server("127.0.0.1", port=5000, app=app, threaded=True)
server_thread = Thread(target=lambda: server.serve_forever())
server_thread.daemon = True
server_thread.start()

print("Starting webview...")
webview.create_window(
	title = "Pub-Tools",
	url = "http://localhost:5000/" + "/".join(sys.argv[1:]),
	width = 900,
	height = 800,
	)
webview.start(debug=False)
print("Webview has exited.")

print("Shutting down the web server...")
server.shutdown()
server_thread.join()
print("Server has stopt.")

